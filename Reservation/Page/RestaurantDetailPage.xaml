<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Reservations.Page.RestaurantDetailPage"
             xmlns:viewModel="clr-namespace:Reservations.modelViews"
             xmlns:model="clr-namespace:Model.Classes;assembly=Model"
             x:DataType="viewModel:RestaurantDetailViewModel"
             Style="{DynamicResource navBarBackgroundColorStyle}">

    <Shell.TitleView>
        <HorizontalStackLayout VerticalOptions="Fill">
            <Label Text="{Binding Title}" VerticalOptions="Center" Margin="60,0,0,0" FontAttributes="Bold" FontSize="25" Style="{DynamicResource labelStyle}"/>
        </HorizontalStackLayout>
    </Shell.TitleView>

    <ScrollView>
        <Grid RowDefinitions="200,*">
            <CarouselView IndicatorView="IndicatorView" ItemsSource="{Binding TempClass.ImagesRestaurant}">
                <CarouselView.ItemTemplate>
                    <DataTemplate x:DataType="model:RestaurantImage">
                        <Image Source="{Binding Image}" Aspect="AspectFill"/>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
            
            <IndicatorView Count="{Binding CountImages}" x:Name="IndicatorView" SelectedIndicatorColor="Red" IndicatorColor="LightGray" HorizontalOptions="Center" VerticalOptions="Start"/>
            
            <VerticalStackLayout Grid.Row="1" Margin="10">
                <Label Text="{Binding TempClass.Restaurant.Name}" FontSize="20" FontAttributes="Bold" Style="{DynamicResource labelStyle}"/>

                <HorizontalStackLayout Spacing="5">
                    <Image Style="{DynamicResource detailPinsStyle}" WidthRequest="40" />
                    <Label Text="{Binding TempClass.FullAdress}" VerticalOptions="Center" FontAttributes="Bold" Style="{DynamicResource labelStyle}"/>

                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="5">
                    <Image Style="{DynamicResource timeStyle}" WidthRequest="30" Margin="5"/>
                    <Label Text="{Binding TempClass.Restaurant.OpeningTimes}" LineBreakMode="WordWrap" FontSize="15" WidthRequest="270" Style="{DynamicResource labelStyle}"/>
                </HorizontalStackLayout>


                <HorizontalStackLayout Spacing="5">
                    <Image Style="{DynamicResource wordStyle}" WidthRequest="30" Margin="5"/>
                    <Label Text="www.example.pl" VerticalOptions="Center" Style="{DynamicResource labelStyle}"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout>
                    <Label Text="O nas" FontAttributes="Bold" FontSize="25" Margin="0,5,0,0" Style="{DynamicResource labelStyle}"/>
                    <BoxView WidthRequest="300" HeightRequest="2" BackgroundColor="Grey" Margin="10,10,0,0" VerticalOptions="Center"/>
                </HorizontalStackLayout>

                <Label Text="{Binding TempClass.Restaurant.Desciption}" HorizontalTextAlignment="Justify" Margin="0,10,0,0" Style="{DynamicResource labelStyle}"/>

                <Button Text="Zarezerwuj" Margin="10" Style="{DynamicResource buttonStyle}" Command="{Binding GoToReservationPageCommand}"/>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
    
</ContentPage>