<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Reservations.Page.AboutPage"
             xmlns:viewModel="clr-namespace:Reservations.modelViews"
             x:DataType="viewModel:AboutViewModel"
             Shell.TabBarIsVisible="False"
             Title="{Binding Title}"
             Style="{DynamicResource navBarBackgroundColorStyle}">
    <VerticalStackLayout Padding="10" Spacing="15">
        <Label Text="{Binding Description}" HorizontalTextAlignment="Justify" Style="{DynamicResource labelStyle}"/>

        <BoxView HeightRequest="2" Style="{DynamicResource boxViewStyle}"/>
        <Label Text="Wersja aplikacji" Style="{DynamicResource labelStyle}"/>
        <Label Text="{Binding AplicationVerion}" Style="{DynamicResource labelStyle}"/>
        <BoxView HeightRequest="2" Style="{DynamicResource boxViewStyle}"/>
        <Label Text="Model telefonu" Style="{DynamicResource labelStyle}"/>
        <Label Text="{Binding PhoneModel}" Style="{DynamicResource labelStyle}"/>
        <BoxView HeightRequest="2" Style="{DynamicResource boxViewStyle}"/>
        <Label Text="Wersja systemu" Style="{DynamicResource labelStyle}"/>
        <Label Text="{Binding AdroidVersion}" Style="{DynamicResource labelStyle}"/>
        <BoxView HeightRequest="2" Style="{DynamicResource boxViewStyle}"/>
    </VerticalStackLayout>
</ContentPage>