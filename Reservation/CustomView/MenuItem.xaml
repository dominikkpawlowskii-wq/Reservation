<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:item="clr-namespace:Reservations.CustomView"
             x:Class="Reservations.CustomView.MenuItem"
             x:DataType="item:MenuItem"
             x:Name="root">


    <Border HeightRequest="50" StrokeThickness="0" BackgroundColor="Transparent" Grid.ColumnSpan="3">
        <Grid ColumnDefinitions="60, *, auto" RowDefinitions="*,auto" Margin="10,0,10,0">
            <Border StrokeThickness="0" Style="{DynamicResource borderAppThemeStyle}">
                <Image Source="{Binding Icon, Source={x:Reference root}}" HeightRequest="30"/>
            </Border>
            <Label Grid.Column="1" FontSize="20" Text="{Binding Text, Source={x:Reference root}}" VerticalOptions="Center" Margin="15,0,0,0" Style="{DynamicResource labelStyle}"/>
            <Image HeightRequest="30" Grid.Column="2" Style="{DynamicResource right_arrow_icon_style}"/>

        </Grid>

        <Border.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding Command,Source={x:Reference root}}"/>
        </Border.GestureRecognizers>

    </Border>
</ContentView>
